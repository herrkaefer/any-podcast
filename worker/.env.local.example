# Worker environment variables
NODE_ENV=development

# Worker URLs
PODCAST_WORKER_URL=http://localhost:8787
PODCAST_R2_BUCKET_URL=http://localhost:8787/static

# Podcast branding
PODCAST_ID=any-podcast
PODCAST_TITLE=Any Podcast
PODCAST_DESCRIPTION=An AI-powered, configurable podcast platform.
PODCAST_CONTACT_EMAIL=podcast@any-podcast.local

# Gemini
GEMINI_API_KEY=your_gemini_key
GEMINI_MODEL=gemini-2.0-flash
# GEMINI_THINKING_MODEL=
# GEMINI_MAX_TOKENS=4096

# OpenAI (optional)
# OPENAI_API_KEY=your_openai_key
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_MODEL=gpt-4.1
# OPENAI_THINKING_MODEL=
# OPENAI_MAX_TOKENS=4096

# Jina (optional)
# JINA_KEY=your_jina_key

# Gmail newsletter (optional)
# GMAIL_CLIENT_ID=
# GMAIL_CLIENT_SECRET=
# GMAIL_REFRESH_TOKEN=
# GMAIL_USER_EMAIL=

# TTS
SKIP_TTS=true
TTS_PROVIDER=gemini
TTS_MODEL=gemini-2.5-flash-preview-tts
WOMAN_VOICE_ID=Zephyr
MAN_VOICE_ID=Orus
